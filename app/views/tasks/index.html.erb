<div class="govuk-width-container">

  <main class="govuk-main-wrapper">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Tasks</h1>
        <ul class="govuk-list govuk-!-font-size-27 govuk-list--bullet">
          <% @tasks.each do |task| %>
           <li><a href="/tasks/<%= task.id %>" class="govuk-link"><%= task.description %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </main>
</div>

<a href="/tasks/new" class="govuk-button" data-module="govuk-button">
  Add New Task
</a>
